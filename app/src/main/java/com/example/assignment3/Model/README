How to initialize the board:
For testing purposes only

import Model.ScanBoard;

import java.util.Scanner;

public class Main {
    private static final int ROWS = 5;
    private static final int COLS = 4;
    private static final int MINES = 2;
    private static boolean[][] mine = new boolean[COLS][ROWS];
    private static int[][] mineNum = new int[COLS][ROWS];
    public static int[][] numberOfMines = new int[COLS][ROWS];
    private static String BOMB = "X";
    private static String NOBOMB = ".";
    private static Scanner in = new Scanner(System.in);

    public static void main(String []arg){
        ScanBoard board = new ScanBoard(ROWS,COLS,MINES);
        mine = board.mineBoard();
        mineNum = board.numBoard(mine);
        show();
        int times = MINES;
        boolean isDone = false;
        while(!isDone) {
            System.out.println("size" + board.occupiedMineList.size());
            System.out.print("Enter: ");
            String choice = in.nextLine();

            switch (choice) {
                case "w":
                    //update funtions start demo
                    board.occupiedMineList.add(1);
                    System.out.println("test" + board.occupiedMineList.size());
                    mine = board.updateMineBoard();
                    mineNum = board.numBoard(mine);
                    show();
                    //update function end
                    times--;
                    break;
                case "p":
                    int col = 1;
                    int row = 0;


                    int index = col + row * COLS;
                    for(int i = 0 ; i < board.occupiedMineList.size(); i++) {
                        if(index == board.occupiedMineList.get(i)){
                            board.occupiedMineList.remove(i);
                            System.out.println("removed" + i);
                            break;
                        }
                    }
                    System.out.println("test" + board.occupiedMineList.size());
                    mine = board.updateMineBoard();
                    mineNum = board.numBoard(mine);
                    show();
                    break;
                default:
                    break;
            }
            if(times == 0){
                isDone = true;
            }
        }


    }
    private static void show(){
        for(int row = 0; row < ROWS; row++){
            for(int col = 0; col < COLS ; col++){
                if(mine[col][row]){
                    System.out.print(BOMB);
                }else{
                    System.out.print(NOBOMB);
                }
            }
            System.out.println("");
        }
        for(int row = 0; row < ROWS; row++){
            for(int col = 0; col < COLS ; col++){
                System.out.print(mineNum[col][row]);
            }
            System.out.println("");
        }
    }
}
